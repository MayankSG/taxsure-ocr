<div class="text-center loginscreen animated fadeInDown">
  <div>
    <h1 class="logo-name">Taxsure</h1>
  </div>
  <div class="col-md-12">
    <h3>Welcome to Taxsure</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :class=>"m-t") do |f| %>
      <%= devise_error_messages! %>
      <div class="col-md-4 col-md-offset-2 labal-inline">
        <div class="form-group">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, :class => field_class(resource, :first_name) %>
        </div>

        <div class="form-group">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true, :class => field_class(resource, :last_name) %>
        </div>

        <div class="form-group">
          <%= f.label :company_name %><br />
          <%= f.text_field :company_name, autofocus: true, :class => field_class(resource, :company_name) %>
        </div>
      </div>

      <div class="col-md-4 labal-inline">
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, :class => field_class(resource, :email) %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", :class => field_class(resource, :password) %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => field_class(resource, :password_confirmation) %>
        </div>
      </div>      
      <div class="col-md-4 col-md-offset-4">
        <p class="text-muted text-center"><small>Do not have an account?</small></p>
        <%= f.submit "Create an account", :class => 'btn btn-sm btn-white btn-block button-color' %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>