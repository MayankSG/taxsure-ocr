<div class="text-center loginscreen animated fadeInDown">
  <div>
    <h1 class="logo-name">Taxsure</h1>
  </div>
  <div class="middle-box">
    <h3>Login</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, id: "flash_#{name}" %>
      <%- end -%>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, :class => field_class(resource, :email) %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", :class => field_class(resource, :password) %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <%= f.submit "Log in", :class => 'btn btn-primary block full-width m-b button-color' %>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>